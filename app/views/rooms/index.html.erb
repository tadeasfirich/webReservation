<h1 class="container__h1">Seznam místností</h1>
<nav class="container__nav">
  <%= link_to 'Seznam Budov', root_path, :class=>"container__item" %>
  <p class="container__item">&gt;</p>
  <a class="container__a">Seznam místností</a>
</nav>
<!--FIXME: nefunguje room.building.code-->
<% if @rooms.empty? %>
    <p>V této budově nejsou žádné místnosti</p>
<% else %>
<ul class="seznam">
  <% @rooms.each do |room| %>
      <li class="seznam__li">
        <%= link_to "#{room.title}: (#{room.code})" , room, :class=>"seznam__a" %>
      </li>
  <% end %>
</ul>
<% end %>