<p id="notice"><%= notice %></p>

<h1>Teachers</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teachers.each do |teacher| %>
      <tr>
        <td><%= teacher.first_name %></td>
        <td><%= teacher.last_name %></td>
        <td><%= teacher.email %></td>
        <td><%= link_to 'Show', [:admin, teacher] %></td>
        <td><%= link_to 'Edit', edit_admin_teacher_path(teacher) %></td>
        <td><%= link_to 'Destroy', [:admin, teacher], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Teacher', new_admin_teacher_path %>

<h1 class="container__h1">Seznam Vyučujících</h1>
<nav class="container__nav">
  <%= link_to 'Seznam Budov', '', :class=>"container__item" %>
</nav>
<ul class="seznam">
  <% @teachers.each do |teacher| %>
      <li class="seznam__li">
        <%= link_to teacher.first_name, teacher, :class=>"seznam__a" %>
        <%= link_to "is in Building: #{teacher.building.title}", teacher.building, :class=>"seznam__a" %>
      </li>
  <% end %>
</ul>