<h1 class="container__h1">Teacher Assigment</h1>
<nav class="container__nav">
  <a class="container__a">Teacher Assigment</a>
</nav>
<%= link_to 'Add',  new_admin_teacher_assigment_path , :class=>'button' %>
<p class="seznam__a seznam__a-header">Jméno Příjmení: (kód) název kurzu</p>
<ul class="seznam">
  <% @teacher_assigments.each do |assigment| %>
      <li class="seznam__li">
        <%= link_to "#{assigment.teacher.first_name} #{assigment.teacher.last_name}: (#{assigment.course.code}) #{assigment.course.title}", '', :class=>"seznam__a" %>
        <%= link_to 'Edit', edit_admin_teacher_assigment_path(assigment), :class=>"seznam__a seznam__a-right" %>
        <%= link_to 'Destroy', [:admin, assigment], method: :delete, data: { confirm: 'Are you sure?' }, :class=>"seznam__a seznam__a-end" %>
      </li>
  <% end %>
</ul>