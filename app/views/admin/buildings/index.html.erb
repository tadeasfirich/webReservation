<h1 class="container__h1">Buildings</h1>
<nav class="container__nav">
  <a class="container__a">Buildings</a>
</nav>
<%= link_to 'Add',  new_admin_building_path , :class=>'button' %>
<% if @buildings.empty? %>
    <p class="seznam__warning">Buildings are empty</p>
<% else %>
    <p class="seznam__a seznam__a-header">(Code) Building name</p>
    <ul class="seznam">
      <% @buildings.each do |building| %>
        <li class="seznam__li">
          <%= link_to "(#{building.code}) #{building.title}", [:admin, building], :class=>"seznam__a" %>
          <%= link_to 'Edit', edit_admin_building_path(building), :class=>"seznam__a seznam__a-right" %>
          <%= link_to 'Destroy', [:admin, building], method: :delete, data: { confirm: 'Are you sure?' }, :class=>"seznam__a seznam__a-end" %>
        </li>
      <% end %>
    </ul>
<% end %>