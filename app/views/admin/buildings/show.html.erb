<h1 class="container__h1">Rooms in building</h1>
<nav class="container__nav">
  <%= link_to 'Buildings', admin_buildings_path, :class=>"container__item" %>
  <p class="container__item">&gt;</p>
  <a class="container__item">Rooms in building</a>
</nav>
<%= link_to 'Add', new_admin_room_path , :class=>'button' %>
<% if @rooms.empty? %>
    <p class="seznam__warning">Rooms in this building are empty</p>
<% else %>
    <p class="seznam__a seznam__a-header">(Code) Room name</p>
    <ul class="seznam">
      <% @rooms.each do |room| %>
          <li class="seznam__li">
            <%= link_to "#{room.code}: #{room.title}", '', :class=>"seznam__a" %>
            <%= link_to 'Edit', edit_admin_room_path(room), :class=>"seznam__a seznam__a-right" %>
            <%= link_to 'Destroy', [:admin, room], method: :delete, data: { confirm: 'Are you sure?' }, :class=>"seznam__a seznam__a-end" %>
          </li>
      <% end %>
    </ul>
<% end %>