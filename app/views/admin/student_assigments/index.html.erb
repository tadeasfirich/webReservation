<p id="notice"><%= notice %></p>

<h1>Student Assigments</h1>

<table>
  <thead>
    <tr>
      <th>Course</th>
      <th>Student</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @student_assigments.each do |student_assigment| %>
      <tr>
        <td><%= student_assigment.course %></td>
        <td><%= student_assigment.student %></td>
        <td><%= link_to 'Show', student_assigment %></td>
        <td><%= link_to 'Edit', edit_student_assigment_path(student_assigment) %></td>
        <td><%= link_to 'Destroy', student_assigment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

